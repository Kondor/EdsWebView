<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <WebView
        android:id="@+id/webViewScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/badNetworkConnectionPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/white">

        <TextView
            android:id="@+id/tvBadNetworkConnectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginBottom="12dp"
            android:text="Отсутствует интернет соединение!"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvBadNetworkConnectionMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Чтобы пользоваться приложением, включите интернет."
            android:textColor="@color/black" />

    </LinearLayout>

</FrameLayout>